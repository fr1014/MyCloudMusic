<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_login"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.fr1014.mycoludmusic.ui.login.LoginRootFragment"
        android:label="登录注册"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_splash_to_login_verify"
            app:destination="@id/login_verify" />
    </fragment>

    <fragment
        android:id="@+id/login"
        android:name="com.fr1014.mycoludmusic.ui.login.LoginFragment"
        android:label="登录"
        tools:layout="@layout/fragment_login">
    </fragment>

    <fragment
        android:id="@+id/login_verify"
        android:name="com.fr1014.mycoludmusic.ui.login.VerifyFragment"
        android:label="登录"
        tools:layout="@layout/fragment_verify">
    </fragment>
</navigation>