<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 设置theme -->
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:windowTranslucentNavigation" tools:ignore="NewApi">true</item>
    </style>

    <!-- 设置Toolbar菜单文字的大小  -->
    <style name="ToolbarTheme" parent="AppTheme.AppBarOverlay">
        <item name="actionMenuTextColor">@color/white</item> <!--颜色-->
<!--        <item name="android:textSize">@dimen/toolbar_action_menu_text</item> &lt;!&ndash;字体大小&ndash;&gt;-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PayListDialog" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:layout_height">500dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
    </style>

    <style name="CurrentMusicDialog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--设置状态栏颜色透明-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--可以使状态栏变透明，同时内容区域可以浸入状态栏下面-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--会自动让你的布局paddingTop一个状态栏的高度，在NoActionBar的时候很有用-->
<!--        <item name="android:fitsSystemWindows">true</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 自定义Dialog动画 -->
    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_exit</item>
    </style>
</resources>